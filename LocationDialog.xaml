<Window x:Class="NightKnight.LocationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Location Settings" Height="350" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Set Your Location" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <GroupBox Header="Coordinates" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Latitude:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="LatitudeTextBox" Text="40.7128" Margin="0,0,0,10"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Longitude:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="LongitudeTextBox" Text="-74.0060"/>
                </Grid>
            </GroupBox>
            
            <GroupBox Header="Preset Locations" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <ComboBox x:Name="PresetComboBox" Margin="0,0,0,10" SelectionChanged="PresetComboBox_SelectionChanged">
                        <ComboBoxItem Content="New York, NY"/>
                        <ComboBoxItem Content="Los Angeles, CA"/>
                        <ComboBoxItem Content="London, UK"/>
                        <ComboBoxItem Content="Tokyo, Japan"/>
                        <ComboBoxItem Content="Sydney, Australia"/>
                        <ComboBoxItem Content="Custom"/>
                    </ComboBox>
                    <TextBlock Text="Select a preset location or choose Custom to enter coordinates manually." 
                               TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Timezone Offset (UTC):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1" x:Name="TimezoneTextBox" Text="-8" Width="60" HorizontalAlignment="Left"/>
                    </Grid>
                    <TextBlock Text="Enter timezone offset in hours (e.g., -8 for PST, -5 for EST, +1 for CET)" 
                               TextWrapping="Wrap" FontSize="11" Foreground="Gray"/>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Today's Sun Times" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <TextBlock x:Name="SunTimesText" Text="Enter coordinates to see today's sun times" 
                               TextWrapping="Wrap" FontSize="11"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Click="OkButton_Click" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 