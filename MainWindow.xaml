<Window x:Class="NightKnight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NightKnight"
        Title="NightKnight - Blue Light Filter" Height="700" Width="900">
    
    <Window.Resources>
        <local:TimeSpanConverter x:Key="TimeSpanConverter"/>
        <local:OvernightConverter x:Key="OvernightConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <TabControl>
            <!-- Manual Control Tab -->
            <TabItem Header="Manual Control">
                <StackPanel Margin="10">
                    <TextBlock Text="Manual Filter Control" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <GroupBox Header="Filter Intensity" Margin="0,0,0,20">
                        <StackPanel Margin="10">
                            <TextBlock Text="Green Channel Reduction:" Margin="0,0,0,5"/>
                            <Slider x:Name="GreenSlider" Minimum="0" Maximum="0.5" Value="0" TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="0,0,0,5"/>
                            <TextBlock x:Name="GreenText" Text="Green Reduction: 0.00" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Blue Channel Reduction:" Margin="0,0,0,5"/>
                            <Slider x:Name="BlueSlider" Minimum="0" Maximum="0.5" Value="0.3" TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="0,0,0,5"/>
                            <TextBlock x:Name="BlueText" Text="Blue Reduction: 0.30" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Apply Filter" Click="ApplyFilter_Click" Margin="5" Width="120" Height="35"/>
                        <Button Content="Reset" Click="Reset_Click" Margin="5" Width="120" Height="35"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            
            <!-- Schedule Management Tab -->
            <TabItem Header="Schedule">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Schedule Controls -->
                    <GroupBox Grid.Row="0" Header="Schedule Controls" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <CheckBox x:Name="EnableScheduleCheckBox" Content="Enable Schedule" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <Button Content="Add New Interval" Click="AddInterval_Click" Margin="5" Width="120" Height="30"/>
                            <Button Content="Edit Selected" Click="EditInterval_Click" Margin="5" Width="120" Height="30"/>
                            <Button Content="Delete Selected" Click="DeleteInterval_Click" Margin="5" Width="120" Height="30"/>
                            <Button Content="Clear All" Click="ClearAllIntervals_Click" Margin="5" Width="120" Height="30"/>
                            <Button Content="Sunset/Sunrise Preset" Click="SunsetSunrisePreset_Click" Margin="5" Width="140" Height="30"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Schedule List -->
                    <GroupBox Grid.Row="1" Header="Scheduled Intervals">
                        <ListView x:Name="ScheduleListView" Margin="5" SelectionChanged="ScheduleListView_SelectionChanged">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Start Time" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding StartTime, Converter={StaticResource TimeSpanConverter}}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="End Time" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding EndTime, Converter={StaticResource TimeSpanConverter}}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Type" Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{StaticResource OvernightConverter}">
                                                            <Binding Path="StartTime"/>
                                                            <Binding Path="EndTime"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Green Reduction" Width="120" DisplayMemberBinding="{Binding GreenReduction, StringFormat=P0}"/>
                                    <GridViewColumn Header="Blue Reduction" Width="120" DisplayMemberBinding="{Binding BlueReduction, StringFormat=P0}"/>
                                    <GridViewColumn Header="Gradual Start" Width="100" DisplayMemberBinding="{Binding GradualStart}"/>
                                    <GridViewColumn Header="Gradual End" Width="100" DisplayMemberBinding="{Binding GradualEnd}"/>
                                    <GridViewColumn Header="Active" Width="60" DisplayMemberBinding="{Binding IsActive}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                    
                    <!-- Current Status -->
                    <GroupBox Grid.Row="2" Header="Current Status" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="Current Time: " VerticalAlignment="Center"/>
                            <TextBlock x:Name="CurrentTimeText" Text="--:--" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <TextBlock Text="Active Filter: " VerticalAlignment="Center"/>
                            <TextBlock x:Name="ActiveFilterText" Text="None" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <TextBlock Text="Current Green: " VerticalAlignment="Center"/>
                            <TextBlock x:Name="CurrentGreenText" Text="0%" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <TextBlock Text="Current Blue: " VerticalAlignment="Center"/>
                            <TextBlock x:Name="CurrentBlueText" Text="0%" VerticalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>