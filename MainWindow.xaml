<Window x:Class="NightKnight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NightKnight" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Blue Light Reduction" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Slider x:Name="GreenSlider" Minimum="0" Maximum="0.5" Value="0" TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
            <TextBlock x:Name="GreenText" Text="Green Reduction: 0" HorizontalAlignment="Center"/>
            <Slider x:Name="BlueSlider" Minimum="0" Maximum="0.5" Value="0.5" TickFrequency="0.05" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
            <TextBlock x:Name="BlueText" Text="Blue Reduction: 0.5" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Apply Filter" Click="ApplyFilter_Click" Margin="0,20,0,0" Width="120"/>
                <Button Content="Reset" Click="Reset_Click" Margin="0,20,0,0" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>